Fix building on ppc with gcc-4.1.0.  Patch by Halcy0n.

diff -ur glibc-2.3.6-orig/sysdeps/powerpc/powerpc32/Makefile glibc-2.3.6/sysdeps/powerpc/powerpc32/Makefile
--- glibc-2.3.6-orig/sysdeps/powerpc/powerpc32/Makefile	2005-11-13 09:29:23.000000000 +0000
+++ glibc-2.3.6/sysdeps/powerpc/powerpc32/Makefile	2005-11-13 09:30:48.000000000 +0000
@@ -21,7 +21,7 @@
 ifneq ($(elf),no)
 # The initfini generation code doesn't work in the presence of -fPIC, so
 # we use -fpic instead which is much better.
-CFLAGS-initfini.s = -g0 -fpic -O1
+CFLAGS-initfini.s += -fpic -O1
 
 # There is no benefit to using sdata for these objects, and the user
 # of the library should be able to control what goes into sdata.
diff -ur glibc-2.3.6-orig/sysdeps/powerpc/powerpc64/Makefile glibc-2.3.6/sysdeps/powerpc/powerpc64/Makefile
--- glibc-2.3.6-orig/sysdeps/powerpc/powerpc64/Makefile	2005-11-13 09:29:23.000000000 +0000
+++ glibc-2.3.6/sysdeps/powerpc/powerpc64/Makefile	2005-11-13 09:31:48.000000000 +0000
@@ -14,7 +14,7 @@
 ifneq ($(elf),no)
 # The initfini generation code doesn't work in the presence of -g1 or
 # higher, so we use -g0.
-CFLAGS-initfini.s = -g0 -fpic -O1
+CFLAGS-initfini.s += -fpic -O1
 endif
 endif
 
